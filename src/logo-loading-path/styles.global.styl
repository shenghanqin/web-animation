@import '../../assets/base'
$class = s($prefixer + '-cclogo-loading')

.{$class}
  width 100px
  height 100px
  position relative
  overflow hidden

.{$class}-icon
    position relative
    width 100%
    height 100%

    svg
      width 100%
      height 100%
      // background #000

#{$class}-mask
  animation ui-cclogo-loading-eye 0.7s infinite
  transform-origin center
  
.{$class}-ring
  transform rotate(-15deg)
  animation ui-cclogo-loading-circle linear 0.6s infinite
  transform-origin center
  // stroke-dasharray:900

// .{$class}-circle
//   animation ui-cclogo-loading-circle linear 0.6s infinite
//   -ms-animation ui-cclogo-loading-circle-ie 1s infinite
//   transform-origin center
.{$class}-eye
  animation ui-cclogo-loading-eye 0.7s infinite
  transform-origin center

// .{$class}-ring-1
//   animation: ui-cclogo-loading-circle-1 0.7s linear  infinite; /* 0s开始，持续0.7s*/
//   stroke-dashoffset:900
// .{$class}-ring-2
//   stroke-dashoffset:900
//   animation: ui-cclogo-loading-circle-2 0.7s linear  infinite; /* 0s开始，持续0.7s*/

@keyframes ui-cclogo-loading-circle-1
  0
    stroke-dashoffset:900
  100%
    stroke-dashoffset:0
@keyframes ui-cclogo-loading-circle-2
  0
    stroke-dashoffset:900
  100%
    stroke-dashoffset:0;  

@keyframes ui-cclogo-loading-circle
  0
    transform rotate(0)
  100%
    transform rotate(360deg)

// @-ms-keyframes ui-cclogo-loading-circle-ie
//   0
//     opacity 1
//   66%
//     opacity 0.3
//     -transform rotate(180deg)
//   100%
//     opacity 1
@keyframes ui-cclogo-loading-eye
  0
    opacity 1
  25%
    opacity 0
  100%
    opacity 1