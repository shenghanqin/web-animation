@import '../../assets/base'
$class = s($prefixer + '-cclogo-loading-rotate-')

.{$class}
  width 120px
  height 120px
  display flex

.{$class}-icon
  margin auto
  width 120px
  height 120px

  & > svg
    width 100%
    height 100%
.{$class}-circle
  animation ui-cclogo-loading--circle linear 0.6s infinite
  -ms-animation ui-cclogo-loading--circle-ie 1s infinite
  transform-origin center
.{$class}-eye
  animation ui-cclogo-loading--eye 0.7s infinite
  transform-origin center


// ie 11
@keyframes ui-cclogo-loading--circle
  0
    transform rotate(0)
  100%
    transform rotate(360deg)

@-ms-keyframes ui-cclogo-loading--circle-ie
  0
    opacity 1
  66%
    opacity 0.3
    -transform rotate(180deg)
  100%
    opacity 1
@keyframes ui-cclogo-loading--eye
  0
    opacity 1
  25%
    opacity 0
  100%
    opacity 1